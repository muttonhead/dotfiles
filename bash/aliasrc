# Default to vim
alias vi=vim

# Move to projects
alias ep="cd ~/workspace/epsilon"
alias tt="cd ~/workspace/thinktank"
alias nuvos="cd ~/workspace/nuvos"

# Search files
alias sj="ack --java $1"
alias ss="ack --sql $1"
alias sjs="ack --js $1"
alias sx="ack --xml $1"

# Colorized outputs
alias ls="ls -al --color=auto"

# Doge
alias such=git
alias very=git
alias much='git add'
alias wow='git status'

# maven
alias mcis="mvn clean install -PskipTests"
alias mci="mvn clean install"
alias mej="mvn exec:java"
alias mi="mvn install"
alias mis="mvn install -PskipTests"

# java
alias j7="sudo archlinux-java set java-7-jdk"
alias j8="sudo archlinux-java set java-8-jdk"

# npm
alias nb="npm run build"
alias ni="npm i"
alias ns="NODE_ENV=dev-local npm run start:watch"
